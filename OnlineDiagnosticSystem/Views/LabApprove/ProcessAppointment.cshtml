@model IEnumerable<OnlineDiagnosticSystem.Models.PatientAppointReportMV>

@{
    ViewBag.Title = "Report";
}

<h2>Enter Patient Report Details:</h2>
<h2>@ViewBag.Message</h2>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="card shadow mb-4">
        <div class="card-header py-3">

            <input type="submit" class="genric-btn success form-control col-md-3" style="float:right;" value="Submit Report Details" />
            <h3 class="text-black">@ViewBag.TestName</h3>
            
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>

                            <th style="display:none;">
                                LabAppointID
                            </th>
                            <th style="display:none;">
                                LabTestDetailID
                            </th>
                            <th>
                                Report Detail
                            </th>
                            <th>
                                Min Value
                            </th>
                            <th>
                                Max Value
                            </th>
                            <th>
                                PatientValue
                            </th>



                        </tr>
                    </thead>
                    <tbody 
                           @foreach (var item in Model) {<tr>
                            <td style="display:none;">
                                @Html.DisplayFor(modelItem => item.LabAppointID)
                            </td>
                            <td style="display:none;">
                                @Html.DisplayFor(modelItem => item.LabTestDetailID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DetailName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MinValue)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MaxValue)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PatientValue)
                            </td>


                        </tr>
                    }

                </tbody>
                </table>
            </div>
        </div>
    </div>

}

