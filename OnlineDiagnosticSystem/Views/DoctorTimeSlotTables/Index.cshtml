@model IEnumerable<DatabaseLayer.DoctorTimeSlotTable>

@{
    ViewBag.Title = "Index";
}

<h2>Doctor Time Slot</h2>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        @Html.ActionLink("New Time Slot", "Create", "DoctorTimeSlotTables", new { @style = "float:left;", @class = "genric-btn primary" })
        <input type="text" id="search" name="search" class="form-control col-md-3" style="float:right;" placeholder="search here" />
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Time Slot Title
                        </th>
                        <th>
                            From Time
                        </th>
                        <th>
                            To Times
                        </th>
                        <th>
                            Status
                        </th>
                        <th>Action's'</th>
                    </tr>
                <thead id="searchvalue">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FromTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ToTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsActive)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.DoctorTimeSlotID }, new { @class = "genric-btn primary" })
                            </td>
                        </tr>
                    }
                </thead>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#search").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#searchvalue tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>

